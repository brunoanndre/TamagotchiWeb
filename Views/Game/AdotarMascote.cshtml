@{
   
}

<body class="bodyGame d-flex">
    <div class="d-flex mt-2"><button class="btn btn-danger">Voltar</button></div>
    <div class=" d-flex flex-column">
        <h5 class="align-self-center mt-2 mb-3">Selecione o seu mascote!</h5>
        <table class="table table-striped  table-hover table-dark table-bordered">
            <thead>
                <tr>
                    <th class="text-center">#</th>
                    <th class ="text-center">Nome</th>
                    <th class="text-center">Características</th>
                    <th class="text-center">Habilidades</th>
                    <th class="text-center">Aparência</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center align-middle"><a asp-controller="Game" asp-action="MascoteInfos" asp-route-name="@item.Name"><img class="imgIcon" src="~/images/PokeballIcon.svg.png" alt="Selecionar" /></a></td>
                        <td class="text-capitalize text-center align-middle">@item.Name</td>
                        <td class="text-center align-middle">
                            <ul class="list-unstyled">
                                <li>Altura: @item.Height</li>
                                <li>Peso:   @item.Weight</li>
                            </ul>
                        </td>
                        <td class="text-center align-middle">
                            @foreach (var ability in item.Abilities)
                            {
                                <ul class="list-unstyled">
                                    <li class="text-capitalize">@ability.Ability.Name </li>
                                </ul>
                            }
                        </td>
                        <td class="text-center align-middle"><img src="@item.Sprites.Other.Showdown.Front_default" alt="foto" /></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
</body>
